<%= form_with model: @category, url: admin_categories_path do |f| %>
  <div class="field">
    <%= f.label :clothing_model_id %>
    <%= f.collection_select :clothing_model_id, ClothingModel.order(:name), :id, :name %>
  </div>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit 'Valider' %>
<% end %>
