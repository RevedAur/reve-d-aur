<div class='w-60'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, value: 'Adresse mail' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>

    <div class="actions pt-10 ml-35 ml-20-auth">
      <%= f.submit "Envoyer le mot de passe", class:'button-auth' %>
    </div>
  <% end %>
</div>

<div class='w-50 pt-10 centered'>
  <div>
    <%= link_to "S'inscrire", new_registration_path(resource_name), class:'link-auth' %>
  </div>
  <div class='ml-35 ml-35-auth'>
    <%= link_to "Se connecter", new_session_path(resource_name), class:'link-auth' %>
  </div>
</div>