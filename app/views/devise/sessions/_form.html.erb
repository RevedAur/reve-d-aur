<div class='w-60'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, value: 'Adresse mail' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, value: 'Mot de passe' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, value:'Se souvenir de moi' %>
      </div>
    <% end %>
    <br>

    <div class="actions">
      <%= f.submit "Se connecter", class:'button-auth' %>
    </div>
  <% end %>
</div>

<div class='w-50 pt-10 centered'>
  <div>
    <%= link_to "S'inscrire", new_registration_path(resource_name), class:'link-auth' %>
  </div>
